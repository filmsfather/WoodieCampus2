NODE_ENV=production
PORT=3001
FRONTEND_URL=https://woodiecampus.com
LOG_LEVEL=info

# Database Configuration (Replace with actual production values)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=woodiecampus
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_PRODUCTION_PASSWORD

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration (Replace with secure production secrets)
JWT_SECRET=CHANGE_ME_PRODUCTION_JWT_SECRET
JWT_REFRESH_SECRET=CHANGE_ME_PRODUCTION_REFRESH_SECRET
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Password Security (Higher rounds for production)
BCRYPT_SALT_ROUNDS=12

# Docker Registry Configuration
REGISTRY=ghcr.io
IMAGE_TAG=latest

# Data Persistence Path (Use persistent storage in production)
DATA_PATH=/opt/woodiecampus/data

# Monitoring & Alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_ALERTS_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@woodiecampus.com
SMTP_PASSWORD=CHANGE_ME_SMTP_PASSWORD

# SSL Configuration
SSL_ENABLED=true
CERT_PATH=/etc/letsencrypt/live/woodiecampus.com
LETSENCRYPT_EMAIL=admin@woodiecampus.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=woodiecampus-backups
AWS_ACCESS_KEY_ID=CHANGE_ME_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_AWS_SECRET_KEY
AWS_REGION=ap-northeast-2

# Monitoring
GRAFANA_ENABLED=true
PROMETHEUS_ENABLED=true
LOG_AGGREGATION_ENABLED=true

# Security
CORS_ORIGINS=https://woodiecampus.com,https://www.woodiecampus.com
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Performance
DB_POOL_MAX=20
DB_POOL_MIN=5
REDIS_MAX_MEMORY=1gb
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024