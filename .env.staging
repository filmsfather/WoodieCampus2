NODE_ENV=staging
PORT=3001
FRONTEND_URL=https://staging.woodiecampus.com
LOG_LEVEL=debug

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=woodiecampus_staging
DB_USER=postgres
DB_PASSWORD=staging_secure_password

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=staging_jwt_secret_key_change_me
JWT_REFRESH_SECRET=staging_refresh_secret_key_change_me
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Password Security
BCRYPT_SALT_ROUNDS=10

# Docker Registry Configuration
REGISTRY=ghcr.io
IMAGE_TAG=develop

# Data Persistence Path
DATA_PATH=./data

# Monitoring & Alerts
SLACK_WEBHOOK_URL=
EMAIL_ALERTS_ENABLED=false

# SSL Configuration
SSL_ENABLED=false
CERT_PATH=./certs
LETSENCRYPT_EMAIL=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7